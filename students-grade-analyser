#---------THE NUMBER OF STUDENTS-----------
while True:
    user_input=input("enter the number of students you want to grade:")
    if user_input.isdigit() and int(user_input) > 0:#conditions for the number of students
        number_of_students=int(user_input)
        print("thank you,you entered the number",number_of_students)
        break    
    else:
        print("please enter a valid number of students")
#-----------FIRST FUNC-----------
def display_student_summary():#students summary
    students_names_and_grades=[]
    for i in range(number_of_students):
        while True:#name conditions
            name=input(f"enter the name of student{i+1}: ")
            try:
                num=float(name)
                print("this is not a name")
            except ValueError:
                print("thanks")
                break

        while True:#grade conditions
            try:
                grade=int(input(f"enter the grade between 0 and 100 for student{i+1}: "))
                if 0<= grade<=100:
                    print("thank you")
                    break
                else:
                    print("the grade should be between 1 and 100")
            except ValueError:
                print("please enter a valid grade")
        students_names_and_grades.append((name,grade))
    print("the summary of students and their grades")
    print(students_names_and_grades)
    return students_names_and_grades
#------------2ND FUNC----------
def get_avg_grade(students_names_and_grades):
    grades=[]
    for name,grade in students_names_and_grades:
        grades.append(grade)
    average=sum(grades)/len(grades)
    return average
#-------3rd func------
def get_highest_grade(students_names_and_grades):
    highest_grade_student=""
    highest_grade=0
    for name,grade in students_names_and_grades:
        if grade>highest_grade:
            highest_grade=grade
            highest_grade_student=name
    return highest_grade_student ,highest_grade
#-------calls---------
students_names_and_grades = display_student_summary()
average = get_avg_grade(students_names_and_grades)
print("Average grade is:", average)
highest_grade_student,highest_grade=get_highest_grade(students_names_and_grades)
print("the top student is",highest_grade_student,"with the grade:",highest_grade)
